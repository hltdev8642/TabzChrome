# Recommended tmux configuration for TabzChrome
# Copy to ~/.tmux.conf or append to your existing config

# ============================================
# TERMINAL & COLOR SUPPORT
# ============================================
set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",xterm-256color:Tc"

# ============================================
# CLIPBOARD INTEGRATION
# ============================================
# Enable OSC 52 clipboard (works in Chrome extension)
set -g set-clipboard on
set -ag terminal-overrides "vte*:XT:Ms=\\E]52;c;%p2%s\\7,xterm*:XT:Ms=\\E]52;c;%p2%s\\7"

# ============================================
# MOUSE SUPPORT
# ============================================
set -g mouse on

# Copy on mouse drag (OSC 52 handles clipboard sync)
bind-key -T copy-mode MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel
bind-key -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel

# ============================================
# GENERAL SETTINGS
# ============================================
# Disable automatic window renaming (TabzChrome manages tab names)
set-option -g allow-rename off

# Increase scrollback buffer
set -g history-limit 10000

# Disable visual bell
set -g visual-bell off
set -g visual-activity off

# Enable focus events
set -g focus-events on

# ============================================
# STATUS BAR STYLING - Neutral theme-friendly
# ============================================
# Dark grey base - works with any terminal theme
set -g status-style 'bg=colour235,fg=colour248'

# Active window - subtle highlight
set -g window-status-current-style 'bg=colour238,fg=colour255,bold'

# Inactive windows - muted
set -g window-status-style 'fg=colour244'

# Pane borders - subtle
set -g pane-border-style 'fg=colour238'
set -g pane-active-border-style 'fg=colour245'

# Simple status bar (TabzChrome shows most info in tabs)
set -g status-right '%H:%M %d-%b'
set -g status-right-length 60
set -g status-left-length 40
